<p id="notice"><%= notice %></p>

<div class="row text-center">
	<h1>Pannello di controllo </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover mx-auto w-auto">
		  <thead>
			<tr>
			  <th>Title</th>
			  <th>Views</th>
			  <th>Operations</th>
			  <th colspan="3"></th>
			</tr>
		  </thead>


		  <tbody>
			<% @posts.each do |post| %>
			  <tr>
				<td><%= post.title %></td>
				<td><%= post.views %></td>
				<td><%= link_to 'Show', post %> <%= link_to 'Edit', edit_post_path(post) %> <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<td></td>
				<td></td>
			  </tr>
			<% end %>
		  </tbody>
		</table>
	</div>
	

<br>

<div class="row text-center" >
	<div class="col">
	<button type="button" class="btn btn-dark" id="post_button">
		<%= link_to 'NEW POST', new_post_path %>
	</button>
	</div>
</div>